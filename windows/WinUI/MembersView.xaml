<Window x:Class="WinUI.MembersView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinUI"
        mc:Ignorable="d"
        Title="MembersView" Height="450" Width="800">
  <Window.Resources>
    <local:IPListConverter x:Key="IPConverter"/>
    <local:OnlinePresenceToStringConverter x:Key="NumberToDateConverter"/>
  </Window.Resources>
  <Grid>
    <ListBox x:Name="lstMembers">
      <ListBox.ItemTemplate>
        <DataTemplate DataType="{x:Type local:CentralMember}">
          <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Online}" Margin="10"/>
            <TextBlock Text="{Binding Name}" MinWidth="150" Margin="10"/>
            <TextBlock Text="{Binding Config.IpAssignments, Converter={StaticResource IPConverter}}" MinWidth="150" Margin="10"/>
            <TextBlock Text="{Binding OnlinePresence, Converter={StaticResource NumberToDateConverter}}" MinWidth="150"/>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</Window>
